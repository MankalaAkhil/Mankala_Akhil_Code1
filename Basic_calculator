#include <iostream>
using namespace std;

int main()
{
    int a,b;
    cout<<"Enter the value of a: ";
    cin>>a;
    cout<<"Enter the value of b: ";
    cin>>b;
    
    cout<<"Addition of "<<a<<" and "<<b<<" gives the value: "<< a+b << endl;
    cout<<"Subtraction of "<<a<<" and "<<b<<" gives the value: "<< a-b << endl;
    cout<<"Multiplication of "<<a<<" and "<<b<<" gives the value: "<< a*b << endl;
    cout<<"Division of "<<a<<"and"<<b<<"gives the value: "<< a/b << endl;
    cout<<"Remainder of "<<a<<"and"<<b<<"is: "<< a%b << endl;
    return 0;
}
